        <ListView android:id="@+id/listIncomplete" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="UNKNOWN_DATA_0x1" android:divider="@color/black" android:dividerHeight="5dp" android:layout_weight="1.0" />
        <TextView android:textSize="22sp" android:textColor="@color/black" android:gravity="left|right|center_horizontal|fill_horizontal|center|fill|start|end" android:id="@+id/tvCompletedOrders" android:background="@color/gray" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="Completed Orders" />
        <ListView android:id="@+id/listComplete" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="UNKNOWN_DATA_0x1" android:divider="@color/black" android:dividerHeight="5dp" android:layout_weight="1.0" />
    </LinearLayout>
</LinearLayout>
